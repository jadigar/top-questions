{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node Next",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": [
      "ES2022",
      "ESNext"
    ],
    "outDir": "./dist",
    "types": [
      "jest",
      "node"
    ],
    "strict": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "composite": true,
    "declarationMap": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}